@section Scripts {
    <script>
        // Обновление счетчика выбранных телефонов - ФИКС СНЯТИЯ ВЫДЕЛЕНИЯ
        function updateSelection() {
            const checkboxes = document.querySelectorAll('.phone-select-checkbox');
            const count = document.querySelectorAll('.phone-select-checkbox:checked').length;

            document.getElementById('selectedCount').textContent = `Выбрано: ${count}`;
            document.getElementById('deleteBtn').disabled = count === 0;

            // ФИКС: правильно снимаем выделение со ВСЕХ карточек
            checkboxes.forEach(checkbox => {
                const card = checkbox.closest('.phone-card');
                if (checkbox.checked) {
                    card.classList.add('phone-selected');
                } else {
                    card.classList.remove('phone-selected'); // ФИКС: снимаем выделение
                }
            });
        }

        // Выбор всех телефонов
        function toggleSelectAll(selectAllCheckbox) {
            const checkboxes = document.querySelectorAll('.phone-select-checkbox');
            checkboxes.forEach(checkbox => {
                checkbox.checked = selectAllCheckbox.checked;
            });
            updateSelection();
        }

        // Показать модальное окно подтверждения с возможностью исключения
        function showDeleteConfirmation() {
            const checkboxes = document.querySelectorAll('.phone-select-checkbox:checked');
            const selectedPhonesList = document.getElementById('selectedPhonesList');
            selectedPhonesList.innerHTML = '';

            checkboxes.forEach(checkbox => {
                const card = checkbox.closest('.phone-card');
                const brand = card.querySelector('.phone-brand').textContent;
                const model = card.querySelector('.phone-model').textContent;
                const price = card.querySelector('.price-main').textContent;
                const phoneId = checkbox.value;

                const item = document.createElement('div');
                item.className = 'selected-phone-item';
                item.innerHTML = `
                    <input type="checkbox" class="phone-checkbox-modal" checked
                           onchange="togglePhoneInModal(this, '${phoneId}')">
                    <span class="phone-info-modal">${brand} ${model}</span>
                    <span class="phone-price-modal">${price}</span>
                    <button type="button" class="remove-phone-btn" onclick="removePhoneFromModal('${phoneId}')">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                selectedPhonesList.appendChild(item);
            });

            const modal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            modal.show();
        }

        // Исключить телефон из удаления через чекбокс
        function togglePhoneInModal(checkbox, phoneId) {
            const mainCheckbox = document.querySelector(`.phone-select-checkbox[value="${phoneId}"]`);
            if (mainCheckbox) {
                mainCheckbox.checked = checkbox.checked;
                updateSelection(); // ФИКС: обновляем выделение

                // Обновляем внешний вид элемента в модальном окне
                const item = checkbox.closest('.selected-phone-item');
                if (checkbox.checked) {
                    item.style.opacity = '1';
                } else {
                    item.style.opacity = '0.6';
                }
            }
        }

        // Исключить телефон из удаления через кнопку
        function removePhoneFromModal(phoneId) {
            const mainCheckbox = document.querySelector(`.phone-select-checkbox[value="${phoneId}"]`);
            if (mainCheckbox) {
                mainCheckbox.checked = false;
                updateSelection(); // ФИКС: обновляем выделение

                // Удаляем элемент из модального окна
                const items = document.querySelectorAll('.selected-phone-item');
                items.forEach(item => {
                    const checkbox = item.querySelector('.phone-checkbox-modal');
                    if (checkbox && checkbox.getAttribute('onchange').includes(phoneId)) {
                        item.remove();
                    }
                });
            }
        }

        // Подтверждение удаления
        function confirmDelete() {
            document.getElementById('deleteForm').submit();
        }

        // Инициализация при загрузке страницы
        document.addEventListener('DOMContentLoaded', function() {
            if (@Model.ShowDeletePanel.ToString().ToLower()) {
                updateSelection();
            }
        });
    </script>
