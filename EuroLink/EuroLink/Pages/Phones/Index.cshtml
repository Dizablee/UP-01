@page
@model EuroLink.Pages.Phones.IndexModel
@{
    ViewData["Title"] = "Телефоны";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container-main mt-4">
    <div class="content-wrapper">
        <!-- Заголовок -->
        <div class="page-header mb-5">
            <div class="header-content">
                <div class="phone-icon-header">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h1 class="page-title">Каталог телефонов</h1>
                <p class="page-subtitle">Все доступные модели в нашем магазине</p>
            </div>
        </div>

        <!-- Панель управления -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="section-header">
                <i class="fas fa-list section-icon"></i>
                <h3 class="section-title mb-0">Список телефонов</h3>
            </div>
            <a asp-page="Create" class="btn btn-primary btn-add">
                <i class="fas fa-plus-circle me-2"></i>
                Добавить телефон
            </a>
        </div>

        @if (Model.Phones != null && Model.Phones.Any())
        {
            <div class="row g-4">
                @foreach (var phone in Model.Phones)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="phone-card">
                            <!-- Блок с изображением - УВЕЛИЧЕН -->
                            <div class="phone-image-container">
                                @if (!string.IsNullOrEmpty(phone.ImageUrl))
                                {
                                    <img src="@phone.ImageUrl"
                                         class="phone-image"
                                         alt="@phone.Brand @phone.Model"
                                         onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'">
                                    <div class="image-placeholder" style="display: none;">
                                        <i class="fas fa-mobile-alt"></i>
                                    </div>
                                }
                                else
                                {
                                    <div class="image-placeholder">
                                        <i class="fas fa-mobile-alt"></i>
                                    </div>
                                }
                                <div class="phone-badge @(phone.StockQuantity > 0 ? "in-stock" : "out-of-stock")">
                                    @if (phone.StockQuantity > 0)
                                    {
                                        <i class="fas fa-check-circle me-1"></i>
                                        <span>В наличии</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times-circle me-1"></i>
                                        <span>Нет в наличии</span>
                                    }
                                </div>
                            </div>

                            <div class="phone-content">
                                <div class="phone-header">
                                    <h3 class="phone-brand">@phone.Brand</h3>
                                    <h2 class="phone-model">@phone.Model</h2>
                                </div>

                                <div class="phone-price-section">
                                    <div class="price-main">@phone.Price.ToString("N0") ₽</div>
                                    <div class="stock-main">
                                        <i class="fas fa-box me-2"></i>
                                        <strong>@phone.StockQuantity шт.</strong>
                                    </div>
                                </div>

                                <div class="phone-specs">
                                    @if (!string.IsNullOrEmpty(phone.Color))
                                    {
                                        <div class="spec-item">
                                            <i class="fas fa-palette"></i>
                                            <span><strong>Цвет:</strong> @phone.Color</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(phone.Memory))
                                    {
                                        <div class="spec-item">
                                            <i class="fas fa-sd-card"></i>
                                            <span><strong>Память:</strong> @phone.Memory</span>
                                        </div>
                                    }
                                </div>

                                @if (!string.IsNullOrEmpty(phone.Description))
                                {
                                    <div class="phone-description">
                                        <p>@phone.Description</p>
                                    </div>
                                }

                                <div class="phone-actions">
                                    <button class="btn btn-view">
                                        <i class="fas fa-eye me-2"></i>
                                        Подробнее
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-mobile-alt"></i>
                </div>
                <h2>Телефонов пока нет</h2>
                <p>Добавьте первый телефон в каталог магазина</p>
                <a asp-page="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle me-2"></i>
                    Добавить телефон
                </a>
            </div>
        }
    </div>
</div>

<style>
    /* Общие стили */
    body {
        background: white !important;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
    }

    .container-main {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0 0 0 1rem;
    }

    .content-wrapper {
        max-width: 1800px;
        margin: 0;
        padding-left: 0;
    }

    /* Заголовок страницы */
    .page-header {
        color: #2c3e50;
        margin-bottom: 3rem;
        padding-right: 2rem;
    }

    .header-content {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .phone-icon-header {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%);
        border-radius: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1.5rem;
    }

        .phone-icon-header i {
            font-size: 3.5rem;
            color: white;
        }

    .page-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: #2c3e50;
        text-align: left;
    }

    .page-subtitle {
        font-size: 1.6rem;
        color: #6c757d;
        text-align: left;
        font-weight: 400;
    }

    /* Панель управления */
    .section-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding-right: 2rem;
    }

    .section-icon {
        font-size: 2.5rem;
        color: #667eea;
    }

    .section-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
    }

    .btn-add {
        padding: 18px 36px;
        border-radius: 15px;
        font-weight: 600;
        font-size: 1.3rem;
        background: linear-gradient(135deg, #ff7e5f 0%, #feb47b 100%);
        color: white;
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
        margin-right: 2rem;
    }

        .btn-add:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
            color: white;
        }

    /* Карточка телефона */
    .phone-card {
        background: white;
        border-radius: 25px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.12);
        overflow: hidden;
        transition: all 0.3s ease;
        height: 750px;
        display: flex;
        flex-direction: column;
        border: 1px solid #f0f0f0;
        margin-right: 1rem;
    }

        .phone-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.18);
        }

    /* Изображение телефона */
    .phone-image-container {
        position: relative;
        height: 380px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        padding: 50px;
        flex-shrink: 0;
    }

    .phone-image {
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: transform 0.3s ease;
    }

    .phone-card:hover .phone-image {
        transform: scale(1.1);
    }

    .image-placeholder {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        text-align: center;
    }

        .image-placeholder i {
            font-size: 6rem;
            color: #ced4da;
        }

    /* Бейдж наличия */
    .phone-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
    }

        .phone-badge.in-stock {
            background: #28a745;
            color: white;
        }

        .phone-badge.out-of-stock {
            background: #6c757d;
            color: white;
        }

    /* Контент карточки */
    .phone-content {
        padding: 1.5rem;
        flex: 1;
        display: flex;
        flex-direction: column;
        min-height: 370px;
    }

    .phone-header {
        margin-bottom: 1rem;
    }

    .phone-brand {
        font-size: 1.1rem;
        font-weight: 700;
        color: #6c757d;
        margin-bottom: 0.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .phone-model {
        font-size: 1.6rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 0;
        line-height: 1.2;
    }

    .phone-price-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        padding: 1rem;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 12px;
    }

    /* ЦЕНА - УВЕЛИЧЕНА */
    .price-main {
        font-size: 2.2rem; /* УВЕЛИЧЕНО с 1.8rem */
        font-weight: 800;
        color: #28a745;
    }

    .stock-main {
        font-size: 1.1rem;
        color: #2c3e50;
        display: flex;
        align-items: center;
        font-weight: 600;
    }

    /* Спецификации - УВЕЛИЧЕНЫ */
    .phone-specs {
        margin-bottom: 1rem;
        flex-shrink: 0;
    }

    .spec-item {
        display: flex;
        align-items: center;
        gap: 0.8rem;
        padding: 0.8rem 0; /* УВЕЛИЧЕН отступ */
        color: #2c3e50;
        font-size: 1.15rem; /* УВЕЛИЧЕНО с 1rem */
        border-bottom: 1px solid #f0f0f0;
    }

        .spec-item:last-child {
            border-bottom: none;
        }

        .spec-item i {
            color: #667eea;
            width: 20px;
            font-size: 1.3rem; /* УВЕЛИЧЕНО с 1.1rem */
        }

    /* Описание - УВЕЛИЧЕНО */
    .phone-description {
        flex: 1;
        margin-bottom: 1rem;
        overflow: hidden;
        min-height: 80px;
    }

        .phone-description p {
            font-size: 1.1rem; /* УВЕЛИЧЕНО с 0.95rem */
            color: #6c757d;
            line-height: 1.5; /* УВЕЛИЧЕНО с 1.4 */
            margin: 0;
            display: -webkit-box;
            -webkit-line-clamp: 5;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

    .phone-actions {
        margin-top: auto;
        flex-shrink: 0;
    }

    .btn-view {
        width: 100%;
        padding: 12px 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-view:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    /* Состояние пустого списка */
    .empty-state {
        text-align: center;
        padding: 5rem 3rem;
        background: white;
        border-radius: 25px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
        margin: 2rem 2rem 2rem 0;
    }

    .empty-icon {
        width: 140px;
        height: 140px;
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border-radius: 35px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 3rem;
    }

        .empty-icon i {
            font-size: 4rem;
            color: #6c757d;
        }

    .empty-state h2 {
        color: #2c3e50;
        margin-bottom: 1.5rem;
        font-weight: 700;
        font-size: 2.5rem;
    }

    .empty-state p {
        color: #6c757d;
        margin-bottom: 3rem;
        font-size: 1.4rem;
    }

    /* Адаптивность */
    @@media (max-width: 1200px) {
        .content-wrapper {
            max-width: 95%;
            margin: 0;
        }

        .phone-card {
            height: 700px;
        }

        .phone-image-container {
            height: 320px;
        }

        .price-main {
            font-size: 2rem; /* Адаптивный размер */
        }

        .spec-item {
            font-size: 1.1rem;
        }

        .phone-description p {
            font-size: 1.05rem;
        }
    }

    @@media (max-width: 768px) {
        .container-main {
            padding: 0 0.5rem 0 0.5rem;
        }

        .content-wrapper {
            max-width: 100%;
            margin: 0 auto;
        }

        .page-header,
        .section-header {
            padding-right: 1rem;
        }

        .btn-add {
            margin-right: 1rem;
        }

        .empty-state {
            margin: 2rem 1rem;
        }

        .page-title {
            font-size: 2.8rem;
        }

        .phone-card {
            height: 650px;
        }

        .phone-image-container {
            height: 280px;
            padding: 35px;
        }

        .phone-model {
            font-size: 1.4rem;
        }

        .price-main {
            font-size: 1.8rem; /* Адаптивный размер */
        }

        .spec-item {
            font-size: 1.05rem;
            padding: 0.7rem 0;
        }

        .phone-description p {
            font-size: 1rem;
        }
    }

    @@media (max-width: 576px) {
        .page-title {
            font-size: 2.2rem;
        }

        .phone-icon-header {
            width: 80px;
            height: 80px;
        }

            .phone-icon-header i {
                font-size: 3rem;
            }

        .phone-model {
            font-size: 1.3rem;
        }

        .price-main {
            font-size: 1.7rem; /* Адаптивный размер */
        }

        .phone-image-container {
            height: 250px;
            padding: 30px;
        }

        .phone-card {
            height: 620px;
        }

        .spec-item {
            font-size: 1rem;
            padding: 0.6rem 0;
        }

            .spec-item i {
                font-size: 1.2rem;
            }

        .phone-description p {
            font-size: 0.95rem;
        }
    }
</style>