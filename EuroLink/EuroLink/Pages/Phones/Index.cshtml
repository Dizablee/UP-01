@page
@model EuroLink.Pages.Phones.IndexModel
@{
    ViewData["Title"] = "Телефоны";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Список телефонов</h1>
        <a asp-page="Create" class="btn btn-success">Добавить телефон</a>
    </div>

    @if (Model.Phones != null && Model.Phones.Any())
    {
        <div class="row">
            @foreach (var phone in Model.Phones)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <!-- Блок с изображением -->
                        <div class="card-img-container" style="height: 200px; overflow: hidden; background: #f8f9fa;">
                            @if (!string.IsNullOrEmpty(phone.ImageUrl))
                            {
                                <img src="@phone.ImageUrl" class="card-img-top h-100 w-100"
                                     alt="@phone.Brand @phone.Model"
                                     style="object-fit: contain;"
                                     onerror="this.style.display='none'">
                            }
                            else
                            {
                                <div class="h-100 w-100 d-flex align-items-center justify-content-center">
                                    <span class="text-muted">Нет изображения</span>
                                </div>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@phone.Brand @phone.Model</h5>
                            <p class="card-text mb-2">
                                <strong>Цена:</strong> @phone.Price.ToString("N0") ₽<br>
                                <strong>В наличии:</strong>
                                <span class="badge @(phone.StockQuantity > 0 ? "bg-success" : "bg-secondary")">
                                    @phone.StockQuantity шт.
                                </span><br>
                                @if (!string.IsNullOrEmpty(phone.Color))
                                {
                                    <strong>Цвет:</strong> @phone.Color

                                    <br>
                                }
                                @if (!string.IsNullOrEmpty(phone.Memory))
                                {
                                    <strong>Память:</strong> @phone.Memory

                                    <br>
                                }
                            </p>
                            @if (!string.IsNullOrEmpty(phone.Description))
                            {
                                <p class="card-text small text-muted mt-auto">@phone.Description</p>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4 class="text-muted">Телефонов пока нет</h4>
            <p class="text-muted">Добавьте первый телефон в каталог</p>
            <a asp-page="Create" class="btn btn-primary">Добавить телефон</a>
        </div>
    }
</div>

<style>
    .card {
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .card-img-container {
        border-bottom: 1px solid rgba(0,0,0,0.125);
    }
</style>